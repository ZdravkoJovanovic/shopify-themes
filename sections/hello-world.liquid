<div class="hero-slideshow-section full-width">
  <div class="slideshow-container">
    {% assign slides = '' %}
    {% if section.settings.slide_1_image != blank %}
      {% assign slides = slides | append: '1,' %}
    {% endif %}
    {% if section.settings.slide_2_image != blank %}
      {% assign slides = slides | append: '2,' %}
    {% endif %}
    {% if section.settings.slide_3_image != blank %}
      {% assign slides = slides | append: '3,' %}
    {% endif %}
    
    {% if slides != blank %}
      <!-- Slide 1 -->
      {% if section.settings.slide_1_image != blank %}
        <div class="hero-slide active" data-slide="1">
          <img src="{{ section.settings.slide_1_image | img_url: '1600x' }}" alt="Slide 1" class="hero-image">
          <div class="hero-overlay">
            <div class="hero-content">
              {% if section.settings.small_text != blank %}
                <p class="hero-small-text">{{ section.settings.small_text }}</p>
              {% endif %}
              {% if section.settings.main_text != blank %}
                <h2 class="hero-main-text">{{ section.settings.main_text }}</h2>
              {% endif %}
              {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-button">
                  {{ section.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
      
      <!-- Slide 2 -->
      {% if section.settings.slide_2_image != blank %}
        <div class="hero-slide" data-slide="2">
          <img src="{{ section.settings.slide_2_image | img_url: '1600x' }}" alt="Slide 2" class="hero-image">
          <div class="hero-overlay">
            <div class="hero-content">
              {% if section.settings.small_text != blank %}
                <p class="hero-small-text">{{ section.settings.small_text }}</p>
              {% endif %}
              {% if section.settings.main_text != blank %}
                <h2 class="hero-main-text">{{ section.settings.main_text }}</h2>
              {% endif %}
              {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-button">
                  {{ section.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
      
      <!-- Slide 3 -->
      {% if section.settings.slide_3_image != blank %}
        <div class="hero-slide" data-slide="3">
          <img src="{{ section.settings.slide_3_image | img_url: '1600x' }}" alt="Slide 3" class="hero-image">
          <div class="hero-overlay">
            <div class="hero-content">
              {% if section.settings.small_text != blank %}
                <p class="hero-small-text">{{ section.settings.small_text }}</p>
              {% endif %}
              {% if section.settings.main_text != blank %}
                <h2 class="hero-main-text">{{ section.settings.main_text }}</h2>
              {% endif %}
              {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-button">
                  {{ section.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
      
      <!-- Navigation -->
      <div class="slideshow-navigation">
        <button class="nav-arrow nav-prev">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="color-indicator">
          <span class="current-color">{{ section.settings.slide_1_color | default: "Schwarz" }}</span>
        </div>
        
        <button class="nav-arrow nav-next">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% else %}
      <div class="hero-placeholder">
        <p>Bilder über Theme Editor hinzufügen</p>
      </div>
    {% endif %}
  </div>
</div>

