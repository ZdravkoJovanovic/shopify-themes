{% stylesheet %}
  .hero-slideshow-section {
    width: 100%;
    background-color: #ffffff;
    padding: 0;
  }

  .slideshow-container {
    width: 100%;
    height: 70vh;
    min-height: 500px;
    max-height: 800px;
    position: relative;
    overflow: hidden;
  }

  .hero-slide {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .hero-slide.active {
    opacity: 1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.3);
  }

  .hero-content {
    text-align: center;
    color: white;
    max-width: 600px;
    padding: 20px;
  }

  .hero-small-text {
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0 0 10px 0;
    opacity: 0.9;
  }

  .hero-main-text {
    font-size: 3rem;
    font-weight: 300;
    font-family: 'Playfair Display', serif;
    margin: 0 0 30px 0;
    line-height: 1.2;
  }

  .hero-button {
    display: inline-block;
    background: transparent;
    color: white;
    border: 1px solid white;
    padding: 12px 30px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.3s ease;
  }

  .hero-button:hover {
    background: white;
    color: black;
  }

  .slideshow-navigation {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 40px;
    z-index: 100;
  }

  .nav-arrow {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .nav-arrow:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.6);
  }

  .color-indicator {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 8px 20px;
    backdrop-filter: blur(10px);
  }

  .current-color {
    color: white;
    font-size: 0.85rem;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .hero-placeholder {
    display: grid;
    grid-template-columns: var(--content-grid);
    padding: 72px 0;
    height: 400px;
    background-color: #e5e5e5;
    border: 2px dashed #ccc;
    border-radius: 8px;
    color: #666;
    font-size: 1.1rem;
  }

  .hero-placeholder p {
    grid-column: 2;
    text-align: center;
  }





  .before-after-section {
    padding-top: {{ section.settings.spacing_to_hero }}px;
    padding-left: 40px;
    padding-right: 40px;
    padding-bottom: 80px;
    background-color: #ffffff;
  }

  .before-after-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    max-width: 1500px;
    margin: 0 auto;
  }

  .comparison-pair {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
  }

  .comparison-image {
    position: relative;
    aspect-ratio: 3/6;
    overflow: visible;
    border-radius: 8px;
    background-color: #f0f0f0;
    border: 1px solid #e0e0e0;
  }

  .comparison-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 8px;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  .comparison-label {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 20px;
    border-radius: 4px;
    font-family: 'Playfair Display', serif;
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    z-index: 2;
  }

  .before-label {
    background-color: #242222;
    color: #FFFFFF;
  }

  .after-label {
    background-color: #242222;
    color: #FFFFFF;
  }

  @media (max-width: 1024px) {
    .before-after-grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }
    
    .comparison-pair {
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .before-after-section {
      padding: 60px 20px;
    }
    
    .comparison-pair {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
{% endstylesheet %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slides = document.querySelectorAll('.hero-slide');
  const prevBtn = document.querySelector('.nav-prev');
  const nextBtn = document.querySelector('.nav-next');
  const colorIndicator = document.querySelector('.current-color');
  
  if (slides.length === 0) return;
  
  const colors = [
    '{{ section.settings.slide_1_color | default: "Schwarz" }}',
    '{{ section.settings.slide_2_color | default: "Beige" }}',
    '{{ section.settings.slide_3_color | default: "Grau" }}'
  ];
  
  let currentSlide = 0;
  
  function showSlide(index) {
    slides.forEach(slide => slide.classList.remove('active'));
    if (slides[index]) {
      slides[index].classList.add('active');
      if (colorIndicator && colors[index]) {
        colorIndicator.textContent = colors[index];
      }
    }
  }
  
  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
  }
  
  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    showSlide(currentSlide);
  }
  
  if (nextBtn) nextBtn.addEventListener('click', nextSlide);
  if (prevBtn) prevBtn.addEventListener('click', prevSlide);
  
  // Auto-advance every 5 seconds
  setInterval(nextSlide, 5000);
});
</script>

