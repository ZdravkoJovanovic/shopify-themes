<header>
  <div class="header__title">
    <a href="{{ routes.root_url }}">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: '400x' }}" alt="{{ shop.name }}" class="header__logo">
      {% else %}
        <span class="header__logo-text">hermosa</span>
      {% endif %}
    </a>
  </div>

  <div class="header__menu">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Cormorant+Garamond:wght@300;400;500;600;700&display=swap');
  
  header {
    min-height: {{ section.settings.logo_height | plus: 20 }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #242222;
    padding: 10px 2rem;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    box-sizing: border-box;
  }
  .header__title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
  }
  .header__title a {
    text-decoration: none;
    display: block;
  }
  .header__logo {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    object-fit: contain;
    max-width: 500px;
  }
  .header__logo-text {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 1.8rem;
    letter-spacing: 0.1em;
    color: #FFFFFF;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: #FFFFFF;
  }
  header .header__menu a {
    color: #FFFFFF;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 500;
    font-size: 1.1rem;
    letter-spacing: 0.05em;
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
    color: #FFFFFF;
  }
  header svg {
    width: 2rem;
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  header svg path {
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 30,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Logo Größe",
      "default": 80
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu"
    }
  ]
}
{% endschema %}
