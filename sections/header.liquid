<header>
  <div class="header__left">
    <div class="header__slideshow">
      <span class="slide-text active">{{ section.settings.slide_text_1 | default: "Gratis Versand ab 35 Euro" }}</span>
      <span class="slide-text">{{ section.settings.slide_text_2 | default: "Lieferzeit 6 - 9 Werktage" }}</span>
    </div>
  </div>

  <div class="header__title">
    <a href="{{ routes.root_url }}">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: '400x' }}" alt="{{ shop.name }}" class="header__logo">
      {% else %}
        <span class="header__logo-text">hermosa</span>
      {% endif %}
    </a>
  </div>

  <div class="header__menu">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Cormorant+Garamond:wght@300;400;500;600;700&display=swap');
  
  header {
    height: {{ section.settings.header_height }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #242222;
    padding: 0 2rem;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    box-sizing: border-box;
  }
  .header__title {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
  }
  .header__title a {
    text-decoration: none;
    display: block;
  }
  .header__logo {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    object-fit: contain;
    max-width: 500px;
  }
  .header__logo-text {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 1.8rem;
    letter-spacing: 0.1em;
    color: #FFFFFF;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: #FFFFFF;
  }
  header .header__menu a {
    color: #FFFFFF;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 500;
    font-size: 1.1rem;
    letter-spacing: 0.05em;
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
    color: #FFFFFF;
  }
  header svg {
    width: 2rem;
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  header svg path {
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
  .header__left {
    display: flex;
    align-items: center;
  }
  .header__slideshow {
    position: relative;
    width: 220px;
    height: 25px;
    overflow: hidden;
  }
  .slide-text {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    color: #B0AC76;
    font-family: 'Cormorant Garamond', serif;
    font-size: 1rem;
    font-weight: 500;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  .slide-text.active {
    opacity: 1;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slides = document.querySelectorAll('.slide-text');
  let currentSlide = 0;

  function showNextSlide() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add('active');
  }

  setInterval(showNextSlide, 2000);
});
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 30,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Logo Größe",
      "default": 60
    },
    {
      "type": "range",
      "id": "header_height",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Navigationsleisten Höhe",
      "default": 80
    },
    {
      "type": "text",
      "id": "slide_text_1",
      "label": "Slideshow Text 1",
      "default": "Gratis Versand ab 35 Euro"
    },
    {
      "type": "text",
      "id": "slide_text_2", 
      "label": "Slideshow Text 2",
      "default": "Lieferzeit 6 - 9 Werktage"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu"
    }
  ]
}
{% endschema %}
